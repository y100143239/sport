/* 侧滑开关按钮 */
.sidebar-toggle {
  z-index: 100;
  position: absolute;
  left: 0rpx;
  top: 176rpx;
  width: 106rpx;
  height: 96rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  transition: all .3s ease-in;
}

.sidebar-hidden .sidebar {
  left: -100%;
}
.sidebar-hidden .sidebar-backdrop {
  display: none;
}

.sidebar-visible .sidebar {
  left: 0;
}
.sidebar-visible .sidebar-backdrop {
  display: block;
}
.sidebar-visible .progress-ring-canvas {
  display: none;
}
.sidebar-visible .sidebar-toggle {
  left: 520rpx;
  top: 175rpx;
  width: 98rpx;
  height: 84rpx;
}

.sidebar-backdrop {
  z-index: 100;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}

.sidebar {
  z-index: 100;
  position: absolute;
  top: 0;
  height: 100%;
  width: 520rpx;
  background: repeat-y 0 0;
  background-size: 100% auto;
  transition: all .2s ease-in;
}

.sidebar-header {
  padding-top: 142rpx;
  background: no-repeat 0 0;
  background-size: 100% auto;
}

.user-info {
  position: relative;
  width: 100%;
  height: 123rpx;
  background: no-repeat right 0;
  background-size: 491rpx 123rpx;
}

.user-info-avatar {
