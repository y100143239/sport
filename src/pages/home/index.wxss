@charset "UTF-8";
.weather {
  color: #ffffff;
}

.weather__temperature {
  line-height: 1;
}
.weather__temperature .image {
  height: 34rpx;
  width: 34rpx;
  vertical-align: -4rpx;
  margin-right: 4rpx;
}
.weather__temperature .value {
  font-size: 36rpx;
  line-height: 1;
}

.weather__pm {
  margin-top: -4px;
  line-height: 1;
}
.weather__pm .value {
  margin-left: 4rpx;
  font-size: 24rpx;
}
.weather__pm .desc {
  padding: 2rpx;
  margin-left: 4rpx;
  font-size: 14rpx;
  border: solid 1rpx #fff;
  border-radius: 2rpx;
  vertical-align: middle;
}

.broadcast {
  width: 460rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 6rpx;
  color: #b2f3f5;
}
.broadcast::after {
  content: "";
  z-index: 10;
  position: absolute;
  bottom: -14rpx;
  right: 17rpx;
  width: 24rpx;
  height: 14rpx;
  background: url(http://127.0.0.1:8080/assets/images/home/broadcast_arrow.png) no-repeat 0 0;
  background-size: 24rpx 14rpx;
}

.broadcast__swiper {
  background: url(http://127.0.0.1:8080/assets/images/home/broadcast_horn.png) no-repeat 16rpx 12rpx;
  background-size: 24rpx 24rpx;
}
.broadcast__swiper .text {
  box-sizing: border-box;
  display: block;
  width: 100%;
  height: 48rpx;
  padding: 0 48rpx;
  overflow: hidden;
}

.entrance__item {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 12rpx;
}
.entrance__item .image {
  width: 100%;
  height: 100%;
}

.map {
  position: absolute;
  width: 100%;
  height: 686rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.activity {
  position: absolute;
}

.activity_reward {
  left: 264rpx;
  top: 0;
  width: 160rpx;
  height: 120rpx;
}

.activity_habit {
  left: 508rpx;
  top: 194rpx;
  width: 190rpx;
  height: 140rpx;
}

.activity_road {
  left: 66rpx;
