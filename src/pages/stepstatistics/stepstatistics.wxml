<view class="page">

    <view class="page-header">
        <view class="maxsteps-oneday">
            <view class="num font-AlternateGothicNo2BT">6186</view>
            <view>单日最高步数</view>
        </view>
        <view class="total-sign">
            <view class="num font-AlternateGothicNo2BT">12</view>
            <view>总打卡天数</view>
        </view>
    </view>

    <view class="page-body">
        <view class="today-steps">
            <view class="today-steps-title">今日步数</view>
            <view class="today-steps-num font-AlternateGothicNo2BT">3491</view>
            <view class="today-steps-msg">⋅ 还不错 ⋅</view>
        </view>
        <view class="today-energy">
            <view class="today-energy-distance">公里<text class="num font-AlternateGothicNo2BT">2.5</text></view>
            <view class="today-energy-torch">大卡<text class="num font-AlternateGothicNo2BT">101</text></view>
        </view>
    </view>

    <view class="page-footer chart">

        <view class="chart-heading">
            <view class="date-switcher {{ isMonth ? 'date-switcher-month' : 'date-switcher-week' }}"
                  bindtap="switchDate">{{ isMonth ? '月' : '周' }}</view>
            <view class="steps-toplimit font-AlternateGothicNo2BT">6500</view>
        </view>
        <view class="chart-body">
            <!--<canvas canvas-id="lineCanvas" class="chart-line" disable-scroll="true" ></canvas>-->
            <ec-canvas id="mychart-dom-line" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>
        </view>

    </view>

</view>