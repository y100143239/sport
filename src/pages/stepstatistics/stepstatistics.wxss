.linear-gradient, .page, .page-footer {
  background: linear-gradient(#90e9a8, #d8f4c1);
}

.page-header {
  display: flex;
  flex-direction: row;
  height: 136rpx;
  font-size: 26rpx;
  color: #aaaaaa;
  line-height: 1;
  text-align: center;
  background-color: #f2f5f7;
  box-sizing: border-box;
}
.page-header .num {
  line-height: 80rpx;
  font-size: 48rpx;
  color: #5edc99;
}

.page-body {
  height: 534rpx;
  background-color: #f2f5f7;
}

.page-footer {
  height: 536rpx;
}

.maxsteps-oneday,
.total-sign {
  width: 50%;
  border: solid 4rpx #f2f5f7;
  background-color: #fff;
  box-sizing: border-box;
}

.total-sign {
  border-left: none 0;
}

.today-steps,
.today-energy {
  margin: 0 4rpx;
  background-color: #fff;
}

.today-steps {
  box-sizing: border-box;
  height: 80%;
  padding-top: 134rpx;
  text-align: center;
  line-height: 1;
  color: #fff;
  background: no-repeat center center #fff;
  background-size: 340rpx 328rpx;
}

.today-steps-title {
  font-size: 26rpx;
}

.today-steps-num {
  font-size: 100rpx;
  line-height: 140rpx;
}

.today-steps-msg {
  font-size: 26rpx;
  color: #e18921;
}

.today-energy {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  height: 20%;
  padding-top: 28rpx;
  font-size: 26rpx;
  line-height: 1;
  color: #aaaaaa;
}
.today-energy .num {
  margin-left: 16rpx;
  font-size: 48rpx;
  color: #5edc99;
  vertical-align: -3rpx;
}

.today-energy-distance,
.today-energy-torch {
  box-sizing: border-box;
  width: 250rpx;
  height: 40rpx;
  padding-left: 42rpx;
  background: no-repeat left bottom;
  background-size: auto 100%;
}

.today-energy-distance {
  margin-left: 100rpx;
}

.today-energy-torch {
  margin-left: 112rpx;
}

.bg-egg, .today-steps {
  background-image: url(http://192.168.2.124:8080/src/assets/images/internet/stepstatistics/bg_egg.jpg);
}

.icon-distance, .today-energy-distance {
  background-image: url(http://192.168.2.124:8080/src/assets/images/internet/stepstatistics/icon_distance.png);
}

.icon-torch, .today-energy-torch {
  background-image: url(http://192.168.2.124:8080/src/assets/images/internet/stepstatistics/icon_torch.png);
}
